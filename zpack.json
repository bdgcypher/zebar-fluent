{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.0.3/resources/zpack-schema.json",
  "name": "fluent",
  "version": "1.0.3",
  "description": "A minimal and beautiful top bar following the default Windows 11 'Fluent Design' UI colorscheme.",
  "tags": [
    "transparent",
    "white and gray"
  ],
  "previewImages": [
    "resources\\Preview.png"
  ],
  "repositoryUrl": "https://github.com/bdgcypher/zebar-evergarden",
  "widgets": [
    {
      "name": "index",
      "htmlPath": "index/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "index/**"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "12px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
